#ex01
groups $FT_USER | tr ' ' ',' | tr -d '\n'

#ex02
find . -name '*.sh' -print0 | xargs -0 basename -a -s .sh

find . -type f -name "*.sh" -exec basename -s .sh {} \;

find . -name '*.sh' -execdir basename {} .sh ';'

#ex03
find . -type f | wc -l | tr -d " "

nb=0
for fichier in `find .`
do
nb=`expr $nb + 1`
done
echo $nb

#ex04
ifconfig | grep ether | sed "s/ether //g" | grep -v media | tr -d ' ' | tr -d '\t'

ifconfig -a | grep ether | awk -F' ' '{print $2}'

