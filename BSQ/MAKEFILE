SRCS	= main.c ft_final.c ft_bsq.c ft_error.c ft_make.c ft_read.c
OBJS    = ${SRCS:.c=.o}
INCS	= ./
NAME	= bsq_byan
CC		= gcc
RM		= rm -f
CFLAGS	= -Wall -Wextra -Werror

.c.o :
	${CC} ${CFLAGS} -c $< -o ${<:.c=.o} -I ${INCS}

${NAME} : ${OBJS}
	${CC} ${CFLAGS} ${OBJS} -o ${NAME}

all : ${NAME}

run : ./${NAME}

clean :	${RM} ${OBJS}

fclean : clean ${RM} ${NAME}

re : fclean all

.PHONY: all clean fclean re .c.o